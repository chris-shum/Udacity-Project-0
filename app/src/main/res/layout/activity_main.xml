<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="ShowMe&apos;s Nanodegree Apps!"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/popular_movies_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/stock_hawk_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:layout_below="@+id/popular_movies_button"
        android:layout_alignRight="@+id/popular_movies_button"
        android:layout_alignEnd="@+id/popular_movies_button"
        android:layout_alignLeft="@+id/build_it_bigger_button"
        android:layout_alignStart="@+id/build_it_bigger_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/build_it_bigger_button"
        android:layout_below="@+id/stock_hawk_button"
        android:layout_alignRight="@+id/popular_movies_button"
        android:layout_alignEnd="@+id/popular_movies_button"
        android:layout_alignLeft="@+id/popular_movies_button"
        android:layout_alignStart="@+id/popular_movies_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:id="@+id/make_your_app_material_button"
        android:layout_below="@+id/build_it_bigger_button"
        android:layout_alignRight="@+id/build_it_bigger_button"
        android:layout_alignEnd="@+id/build_it_bigger_button"
        android:layout_alignLeft="@+id/build_it_bigger_button"
        android:layout_alignStart="@+id/build_it_bigger_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:id="@+id/go_ubiquitous_button"
        android:layout_below="@+id/make_your_app_material_button"
        android:layout_alignLeft="@+id/make_your_app_material_button"
        android:layout_alignStart="@+id/make_your_app_material_button"
        android:layout_alignRight="@+id/make_your_app_material_button"
        android:layout_alignEnd="@+id/make_your_app_material_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/capstone_button"
        android:layout_below="@+id/go_ubiquitous_button"
        android:layout_alignLeft="@+id/go_ubiquitous_button"
        android:layout_alignStart="@+id/go_ubiquitous_button"
        android:layout_alignRight="@+id/go_ubiquitous_button"
        android:layout_alignEnd="@+id/go_ubiquitous_button" />
</RelativeLayout>
